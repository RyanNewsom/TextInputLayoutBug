<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="AppTheme">
        <item name="android:textColor">@color/actionable_item</item>
        <item name="android:textColorHint">@color/actionable_item</item>
        <item name="android:textSize">@dimen/normal_font</item>
    </style>

    <style name="TextLabel.Error" parent="AppTheme">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textColorHint">@color/error_red</item>
    </style>

</resources>
